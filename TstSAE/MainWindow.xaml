<Window
    x:Class="TstSAE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TstSAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="500"
    KeyDown="Window_KeyDown"
    KeyUp="Window_KeyUp"
    ResizeMode="NoResize"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="BoutonArrondi" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Canvas x:Name="CanvaFond" />
        <StackPanel
            x:Name="stackBoutonLogo"
            Width="500"
            Height="600"
            Margin="0,0,0,150"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom">
            <TextBlock
                x:Name="logo"
                Width="300"
                Height="300"
                Margin="0,0,0,100"
                Text=""
                TextWrapping="Wrap">
                <TextBlock.Background>
                    <ImageBrush ImageSource="/background/Logo.png" />
                </TextBlock.Background>
            </TextBlock>
            <Button
                x:Name="ButMonde1"
                Width="500"
                Height="40"
                Background="Black"
                Click="ButMonde1_Click"
                Content="Monde 1"
                Foreground="White"
                Style="{StaticResource BoutonArrondi}" />
            <Button
                x:Name="ButMonde2"
                Width="500"
                Height="40"
                Margin="0,20,0,0"
                Background="Black"
                Click="ButMonde2_Click"
                Content="Monde 2"
                Foreground="White"
                Style="{StaticResource BoutonArrondi}" />
            <Button
                x:Name="RegleJeu"
                Width="500"
                Height="40"
                Margin="0,20,0,0"
                Background="Black"
                Click="RegleJeu_Click"
                Content="Regle du jeu"
                Foreground="White"
                Style="{StaticResource BoutonArrondi}" />
        </StackPanel>
        <StackPanel
            x:Name="stackReset"
            Width="40"
            Height="27"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                x:Name="butReset"
                Width="39"
                Height="25"
                Margin="-50,0,0,0"
                Background="#FF001BFF"
                Click="butReset_Click"
                Content="reset"
                Focusable="False"
                Foreground="White"
                IsTabStop="False"
                Style="{StaticResource BoutonArrondi}" />
            <Button
                x:Name="retour"
                Width="40"
                Height="25"
                Background="#FF001BFF"
                Click="retour_Click"
                Content="retour"
                Focusable="False"
                Foreground="White"
                IsTabStop="False"
                Style="{StaticResource BoutonArrondi}" />
        </StackPanel>
        <StackPanel>
            <TextBlock
                x:Name="blockTemps"
                Width="200"
                Height="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="18"
                Foreground="White"
                Text="Temps"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            x:Name="stackVie"
            Width="210"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Image
                x:Name="vie3"
                Width="72"
                Height="60"
                Source="/vie/coeur_plein.png"
                Stretch="Fill" />
            <Image
                x:Name="vie2"
                Width="72"
                Height="60"
                Source="/vie/coeur_plein.png"
                Stretch="Fill" />
            <Image
                x:Name="vie1"
                Width="72"
                Height="60"
                Source="/vie/coeur_plein.png"
                Stretch="Fill" />
        </StackPanel>
    </Grid>
</Window>
